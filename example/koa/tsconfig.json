{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "target": "ES2017",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "strict": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "lib",
    "baseUrl": ".",
    "types": ["jest", "node"]
  },
  "include": ["src/**/*"]
}

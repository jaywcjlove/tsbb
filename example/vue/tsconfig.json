{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "jsx": "react",
    "baseUrl": ".",
    "outDir": "cjs",
    "noEmit": false,
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "module": "ES6",
    "moduleResolution": "Node",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "target": "ES6",
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"]
  }
}

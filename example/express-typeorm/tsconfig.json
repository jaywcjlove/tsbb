{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "target": "ES2017",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "strict": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "lib",
    "baseUrl": ".",
    "typeRoots": ["src/types/*", "node_modules/@types/*"]
  },
  "include": ["src/**/*"]
}

{
  "env": {
    "cjs": {
      "presets": [
        "@babel/preset-react",
        [
          "@tsbb/babel-preset-tsbb",
          {
            "modules": false,
            "targets": {
              "browsers": ["last 2 versions"]
            },
            "transformRuntime": {
              "useESModules": true
            }
          }
        ]
      ],
      "plugins": [["babel-plugin-transform-remove-imports", { "test": "(less|css)$" }]]
    },
    "esm": {
      "presets": [
        "@babel/preset-react",
        [
          "@tsbb/babel-preset-tsbb",
          {
            "modules": false,
            "targets": {
              "browsers": ["last 2 versions"]
            },
            "transformRuntime": {
              "useESModules": true
            }
          }
        ]
      ],
      "plugins": [["babel-plugin-transform-rename-import", { "original": "^(.+?)\\.less$", "replacement": "$1.css" }]]
    }
  }
}

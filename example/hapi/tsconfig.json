{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "target": "es2017",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "lib",
    "baseUrl": ".",
    "types": ["jest", "node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}

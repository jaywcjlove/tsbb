{
  "name": "tsbb",
  "version": "1.7.6",
  "description": "TSBB is a zero-config CLI that helps you develop, test, and publish modern TypeScript project.",
  "bin": {
    "tsbb": "./lib/command/tsbb.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jaywcjlove/tsbb.git"
  },
  "bugs": {
    "url": "https://github.com/jaywcjlove/tsbb/issues"
  },
  "homepage": "https://github.com/jaywcjlove/tsbb",
  "scripts": {
    "prepare": "npm run build",
    "doc": "typedoc --out doc/",
    "type-check": "tsc --noEmit",
    "build": "npm run tsc",
    "start": "npm run tsc -- --watch",
    "tsc": "tsc -p ./ --types --outDir lib",
    "test": "node lib/command/tsbb.js test",
    "coverage": "node lib/command/tsbb.js test --coverage"
  },
  "files": [
    "lib",
    "bin",
    "src"
  ],
  "keywords": [
    "typescript",
    "babel",
    "node.js"
  ],
  "author": "kenny wang <wowohoo@qq.com>",
  "license": "MIT",
  "jest": {
    "testMatch": [
      "<rootDir>/**/__tests__/**/*.{ts,tsx}",
      "<rootDir>/**/(*.)(spec|test).{ts,tsx}"
    ],
    "modulePathIgnorePatterns": [
      "[/\\\\](node_modules|example)[/\\\\].+\\.(js|jsx|ts|tsx)$"
    ]
  },
  "dependencies": {
    "@tsbb/babel-preset-tsbb": "1.12.1",
    "@types/graceful-fs": "4.1.3",
    "@types/node": "13.13.9",
    "babel-jest": "26.3.0",
    "camelcase": "6.0.0",
    "chalk": "4.0.0",
    "chokidar": "3.4.0",
    "execa": "4.0.3",
    "fs-extra": "9.0.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "26.4.0",
    "ora": "4.0.4",
    "request": "2.88.2",
    "typescript": "3.9.3",
    "yargs": "15.3.1"
  },
  "devDependencies": {
    "@types/babel__core": "7.1.7",
    "@types/execa": "0.9.0",
    "@types/fs-extra": "9.0.1",
    "@types/request": "2.48.5",
    "@types/yargs": "15.0.5",
    "typedoc": "0.17.7"
  }
}
